@{
    ViewData["Title"] = "Home Page";
}
@model WeddingPlanner.Models.Wedding

<h1>Plan Your Wedding</h1>
<form asp-controller="Home" asp-action="CreateWedding" method="POST">
    <span asp-validation-for="WedderOne"></span>
    <label asp-for="WedderOne">Wedder One:</label>
    <input type="text" asp-for="WedderOne" name="WedderOne"/>

    <span asp-validation-for="WedderTwo"></span>
    <label asp-for="WedderTwo">Wedder Two:</label>
    <input type="text" asp-for="WedderTwo" name="WedderTwo"/>

    <span asp-validation-for="Date"></span>
    <label asp-for="Date">Date:</label>
    <input type="date" asp-for="Date" name="Date"/>

    <span asp-validation-for="Address"></span>
    <label asp-for="Address">Address:</label>
    <input type="text" asp-for="Address" name="Address"/>

    <input type="submit" value="Create">
</form>
@{
    if(ViewBag.Error != null)
    {
        <p>@ViewBag.Error</p>
    }
}